// based on http://www.contextfreeart.org/gallery/view.php?id=2162
startshape spiral
CF::Background = [b -1]

shape spiral {
    loop 22200 [y 2 z -1 r 20.1 h 0.11 s 0.912 1.1]
        box []
}

shape box
rule {
    loop 50 [x 0.1 r 4 s 0.975 0.975 b 0.25 sat 0.1]
    	SQUARE [r 50 s 1.75 0.25 skew 10 10 sat 0.75 b 0.5 h 0 a -0.95]
}
rule {
    loop 50 [r 6 s 0.95 0.95]
    	SQUARE [r 50 s 1.75 0.25 skew 10 10 sat 1 b 1 h 15 a -0.95]
}