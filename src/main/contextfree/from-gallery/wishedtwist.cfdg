// http://www.contextfreeart.org/gallery/view.php?id=2762
startshape twist

CF::Background = [b -1]

shape twist {
    loop 3 [r (360/3)]
        wish [x -18]
}

shape wish {
    loop 2 [f 180 x -14 s 0.8]
        wish [s 0.99 0.8 x 4 y 0.2 b 0.4 a -0.1 r 24]
    CIRCLE [b 0.1]
    twist [s 0.4 y 24 h -42 sat 0.4]
}